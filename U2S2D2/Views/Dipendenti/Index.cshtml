@model IEnumerable<U2S2D2.Models.Dipendente>

@{
    ViewBag.Title = "Dipendenti";
}

<h2>Dipendenti</h2>

<p>
    @Html.ActionLink("Aggiungi Nuovo Dipendente", "CreaDipendenti", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cognome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Indirizzo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodiceFiscale)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Coniugato)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroFigli)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mansione)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cognome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Indirizzo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CodiceFiscale)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Coniugato)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroFigli)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mansione)
        </td>

       <!--Aggiungo EditDipendenti-->

        <td>
            @Html.ActionLink("Edit", "EditDipendenti", new { id = item.ID }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Delete", "DeleteDipendenti", new { id = item.ID }, new { @class = "btn btn-danger" })

        </td>
        
    </tr>
}

</table>
